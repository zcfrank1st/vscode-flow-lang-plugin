{
	"name": "flowchart",
	"displayName": "flowchart",
	"description": "dsl to generate flowchart",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.flowchart"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "flow",
				"extensions": [".fl", ".txt"]
			}
		],
		"grammars": [
			{
				"language": "flow",
				"scopeName": "source.fl",
				"path": "./syntax/flow.tmGrammar.json"
			}
		],
		"configuration": {
            "title": "FlowChart",
            "properties": {
                "flowchart.path": {
                    "type": "string",
                    "default": "",
                    "description": "flow-lang core path"
                }
            }
        },
		"commands": [{
			"command": "extension.flowchart",
			"title": "FlowChart"
		}],
		"keybindings": [
            {
                "command": "extension.flowchart",
                "key": "ctrl+f10",
                "mac": "cmd+f10",
                "when": "editorTextFocus"
            }
		],
		"menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "extension.flowchart",
                    "group": "navigation"
                }
            ]
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
